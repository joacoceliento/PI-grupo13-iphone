<!DOCTYPE html>
<html lang="es">
    
    <!-- Include Head -->
    <%- include('partials/head') %>

<body>
	<!-- Header -->
    <%- include('partials/header') %>

	<!-- Novedades -->
	<div class="container products-wrapper">
        <div class="row">
          <div class="col-12">
            <h2 class="products-title">Resultados de BÃºsqueda:</h2>
          </div>
          <!-- Show the "ultimos" products -->

         
              <% for (let i = 0; i < productos.length; i++) { %>
              
              <% let botin = productos[i]; %>
  
              <div class="col-12 col-sm-6 col-lg-3">
                <section class="product-box">
                  <a href="/product/id/<%= botin.id %>"> 
                    <figure class="product-box_image">
                      <img src="<%= botin.imagen %>" alt="<%= botin.nombre_producto %>">
                    </figure>
                    <article class="product-box_data">
                      <h2><%= botin.nombre_producto %></h2>
                      <p><%= botin.descripcion %></p>
                      <p>Comentarios: <%= botin.comentario.length %></p>
                      <a href="/users"> <%= botin.user.nombre %></a>
                    </article>
                  </a>
                </section>
              </div>
  
            <% } %> 
          
          
          </div>
        </div>


	<!-- footer -->
	<%- include('partials/footer') %>
    
</body>

</html>