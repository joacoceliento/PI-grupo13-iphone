<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head') %>

<body>
	<!-- Header -->
    <% if (locals.user != undefined) { %>
      <%- include('partials/header-logueado') %>
    <% } else { %>
      <%- include('partials/header') %>
    <% } %>
	<!-- /Header -->

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="<%= usuario.foto_url %>" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					
					<h1 class="main-title"> <%= usuario.usuario %>
						<h1><strong> <%= usuario.nombre %> </strong></h1>
						<a href="/users">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
				
					
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<div>
					<ul class="">
						<li><%= usuario.mail %></li>
						<li> <%= productos.length %> productos</li>
						<li>200 seguidores</li>
						<li>300 comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->


	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>
			<!-- Show mis productos -->
			<% for (let i = 0; i < productos.length; i++) { %>
              
				<% let botin = productos[i]; %>
		
				<div class="col-12 col-sm-6 col-lg-3">
				  <section class="product-box">
					<a href="/product/id/<%= botin.id %>"> 
					  <figure class="product-box_image">
						<img src="<%= botin.imagen %>" alt="<%= botin.nombre_producto %>">
					  </figure>
					  <article class="product-box_data">
						<h2><%= botin.nombre_producto %></h2>
						<p><%= botin.descripcion %></p>
						<p>Comentarios: <%= botin.comentario.length %></p>
					  </article>
					</a>
				  </section>
				</div>
			  <% } %> 

		</div>
	</div>
	<!-- /Mis productos -->

	<!-- footer -->
	<%- include('partials/footer') %>
</body>	
</html>